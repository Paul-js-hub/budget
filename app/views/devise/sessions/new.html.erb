<div id="session" class="container-fluid d-flex flex-column align-items-center">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :style => 'width:90%' }) do |f| %>
  <div class="field">
    <%= f.label :email , class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "mt-3" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary mt-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
