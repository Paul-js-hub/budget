<div class="container-fluid w-100 d-flex flex-column align-items-center mt-5">
    <h1>Create a new Transaction:</h1>
    <%= form_with model: @expense, url: category_expenses_path, method: :post, :html => {:class => "w-75 mt-4"} do |form| %>
      <div class="form-floating mb-3 w-100">
        <%= form.text_field :name, class:"form-control", id:"floatingInput", placeholder:"Transaction name" %>
        <%= form.label :name, 'Name', class: "form-label" %>
      </div>
      <div class="form-floating mb-3 w-100">
        <%= form.number_field :amount, class:"form-control", id:"floatingInput", placeholder:"Transaction amount"  %>
        <%= form.label :amount, 'Amount', class: "form-label" %>
      </div>
      <%= form.submit 'Save', class: "btn btn-primary text-white" %>
      <%= link_to 'Back', category_path(@category), class: "btn btn-primary text-white" %>
    <% end %>
    </div>